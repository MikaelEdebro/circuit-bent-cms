@model CircuitBentCMS.Models.Blog

<div class="form-group">
    <label for="Headline" class="control-label col-sm-2">Headline</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Headline, new { @class = "form-control", maxlength = "150" })
        @Html.ValidationMessageFor(model => model.Headline)
    </div>
    
</div>

<div class="form-group">
    <label for="Text" class="control-label col-sm-2">Text</label>
    <div class="col-sm-10">
        @Html.TextAreaFor(model => model.Text, new { @class = "form-control", rows = "20" })
        @Html.ValidationMessageFor(model => model.Text)
    </div>
</div>