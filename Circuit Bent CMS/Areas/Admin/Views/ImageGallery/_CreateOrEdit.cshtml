@model CircuitBentCMS.Models.Image

<div class="form-group">
    <label for="ImageUrl" class="control-label col-sm-2">Image</label>
    <div class="col-sm-10">
        <a href="~/Images/ImageGallery/@Model.ImageUrl" class="fancybox">
            <img src="~/Images/ImageGallery/thumb_@Model.ImageUrl" alt="@Model.ImageUrl" class="thumbnail" />
        </a>

        @Html.HiddenFor(model => model.ImageUrl)
    </div>
</div>
<div class="form-group">
    <label for="Title" class="control-label col-sm-2">Title</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
</div>

<div class="form-group">
    <label for="Photographer" class="control-label col-sm-2">Photographer</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Photographer, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Photographer)
    </div>
</div>

<div class="form-group">
    <label for="PhotographerUrl" class="control-label col-sm-2">Photographer web</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.PhotographerUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PhotographerUrl)
    </div>
</div>