@model CircuitBentCMS.Models.ImageSliderImage

@{
    ViewBag.Title = "Image slider › Edit slide";
}

<div class="row menu">
    <div class="col-sm-6">
        <ol class="breadcrumb">
            <li><a href="/Admin/ImageSlider">Image slider</a></li>
            <li class="active">Edit slide</li>
        </ol>
    </div>
</div>

@using (Html.BeginForm("Edit", "ImageSlider", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.ImageSliderImageId)
    @Html.HiddenFor(model => model.Order)
    @Html.HiddenFor(model => model.ImageSliderId)
	@Html.Partial("_CreateOrEdit", Model)

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save changes</button>
            <button type="reset" class="btn btn-default">Undo</button>
        </div>
    </div>
}
