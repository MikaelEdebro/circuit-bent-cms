@model CircuitBentCMS.Models.ImageSliderImage

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <img src="~/Images/ImageSlider/@Model.ImageUrl" alt="@Model.ImageUrl" class="thumbnail" />
        @Html.HiddenFor(model => model.ImageUrl)
    </div>
</div>

<div class="form-group">
    <label for="Title" class="control-label col-sm-2">Title</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control col-sm-10" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
</div>

<div class="form-group">
    <label for="LinkUrl" class="control-label col-sm-2">Link URL</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.LinkUrl, new { @class = "form-control col-sm-10" })
        @Html.ValidationMessageFor(model => model.LinkUrl)
    </div>
</div>




