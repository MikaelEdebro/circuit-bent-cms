@model CircuitBentCMS.Models.MailSettings

@{
    ViewBag.Title = "Mail settings";
}

<div class="row menu">
    <div class="col-sm-6">
        <ol class="breadcrumb">
            <li class="active">Mail settings</li>
        </ol>
    </div>
</div>

@using (Html.BeginForm("Edit", "MailSettings", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
        
    if (Model != null)
    {
        @Html.HiddenFor(model => model.MailSettingsId)
    }
        
    @Html.Partial("_CreateOrEdit", Model)
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </div>
    
}