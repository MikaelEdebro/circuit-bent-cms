@model CircuitBentCMS.Models.Show

<div class="form-group">
    <label for="Title" class="control-label col-sm-2">Title</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", maxlength = "150" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
</div>

<div class="form-group">
    <label for="Date" class="control-label col-sm-2">Date</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Date, new { @class = "form-control", type = "datetime" })
        @Html.ValidationMessageFor(model => model.Date)
    </div>
</div>

<div class="form-group">
    <label for="Venue" class="control-label col-sm-2">Venue</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Venue, new { @class = "form-control", maxlength = "150" })
        @Html.ValidationMessageFor(model => model.Venue)
    </div>
</div>

<div class="form-group">
    <label for="Time" class="control-label col-sm-2">Time</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Time, new { @class = "form-control", maxlength = "20" })
        @Html.ValidationMessageFor(model => model.Time)
    </div>
</div>

<div class="form-group">
    <label for="Price" class="control-label col-sm-2">Price</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", maxlength = "20" })
        @Html.ValidationMessageFor(model => model.Price)
    </div>
</div>

<div class="form-group">
    <label for="LinkToEvent" class="control-label col-sm-2">Link to event</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(model => model.LinkToEvent, new { @class = "form-control", maxlength = "150" })
        @Html.ValidationMessageFor(model => model.LinkToEvent)
    </div>
</div>
