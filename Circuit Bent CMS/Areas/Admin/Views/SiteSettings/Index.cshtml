@model CircuitBentCMS.Models.SiteSettings

@{
    ViewBag.Title = "Site settings";
}

<div class="row menu">
    <div class="col-sm-6">
        <ol class="breadcrumb">
            <li class="active">Site settings</li>
        </ol>
    </div>
</div>


@using (Html.BeginForm("Edit", "SiteSettings", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    
    if (Model != null)
    {
        @Html.HiddenFor(model => model.SiteSettingsId)
    }
        
	@Html.Partial("_CreateOrEdit", Model)

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </div>

}