@model IEnumerable<BandPage.Models.Image>
@{
    ViewBag.Title = "Gallery";
}

<h1>@ViewBag.ImageGalleryName</h1>

@if (Model != null)
{
    <script src="~/Scripts/galleria/galleria-1.2.9.min.js" type="text/javascript"></script>
    
    <div id="galleria">
    @foreach (var item in Model)
    {
        <img src="~/Images/ImageGallery/@item.ImageUrl" />
    }
    </div>
    
    <script>
        Galleria.loadTheme('/Scripts/galleria/themes/classic/galleria.classic.min.js');
        Galleria.configure({
            lightbox: true,
            imageMargin: 0,
            showCounter: false
        });
        Galleria.run('#galleria');
            </script>
    
    <script>
        //$('#body').css('padding', '0');
    </script>
}
